<h1>Your family</h1>

<div class="family">
  <% @pets.each do |pet| %>
    <div class="family-container">
      <div class="family-container-top">
        <img class="pet-avatar" src="" alt="pet-picture">
        <div class="family-pet">
          <h2 class="family-pet-name"><%= pet.name %></h2>
        </div>
      </div>
      <div class="family-pet-content">
        <p class="pet-description">
        <%= pet.description %>
        </p>
      </div>
    </div>
  <% end %>
</div>
