<h1>Your family</h1>

<% @pets.each do |pet| %>
  <div class="container">
    <div class="top">
      <img class="pet-avatar" src="" alt="pet-picture">
      <div class="pet">
        <h2 class="pet-name"><%= pet.name %></h2>
      </div>
    </div>
    <div class="content">
      <p class="entry">
      <%= pet.description %>
      </p>
    </div>
  </div>
<% end %>
