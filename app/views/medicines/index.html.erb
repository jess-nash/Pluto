<div class="nav-buttons">
  <%= link_to pet_path(@pet) do %>
    <%= render 'shared/buttons/backbtn' %>
  <% end %>
  <%= link_to new_pet_medicine_path(@pet) do %>
    <%= render 'shared/buttons/plusbtn' %>
  <% end %>
</div>

<h1><%= "#{@pet.name}'s Medicine" %></h1>

<% if @medicines.present? %>
  <% @medicines.each do |medicine| %>
    <%= link_to medicine_path(medicine) do %>
      <div class="medicine-container mobile-margins">
        <div class="medicine-top">
          <h1><%= medicine.name %><h1>
        </div>
        <div class="medicine-content">
          <h2 class="medicine-title">
            <%= medicine.medicine_type %> : <%= medicine.dosage %>
          </h2>
          <p class="medicine-entry">
            <%= medicine.description %>zz
          </p>
        </div>
        <div class="medicine-img">
          <% if medicine.photos.present? %>
            <% medicine.photos.each do |photo|  %>
              <%= cl_image_tag(photo.key, class: "medicine-photo", width: "300px", height: "300px") %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
<% else %>
  <h2>No medicines in sight.</h2>
  <p>Add a medicine to keep track of.</p>
<% end %>

<%= javascript_pack_tag 'seemore'%>
