<div class="flex-box">
  <%= link_to pet_path(@pet) do %>
    <%= render 'shared/buttons/backbtn' %>
  <% end %>
</div>

<div class="container mobile-margins">
  <div class="medicine-new-header">
    <%= cl_image_tag(@pet.ownerships.first.user.photo.key, class: "medicine-user") %>
    <h2 class="pet-name"> Add new medicine for <%= @pet.name %></h2>
  </div>
  <div class="medcine-entry-form">
    <%= render 'form', medicine: @medicine %>
  </div>
</div>
