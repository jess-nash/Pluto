<div class="flex-box">
  <%= link_to pet_path(@pet) do %>
    <%= render 'shared/buttons/backbtn' %>
  <% end %>
  <%= link_to new_pet_journal_entry_path(@pet) do %>
    <%= render 'shared/buttons/plusbtn' %>
  <% end %>
</div>


<% @appointments.each do |appointment| %>
  <%= link_to pet_appointment_path(@pet, appointment) do %>
    <div class="appointment-container mobile-margins">
      <%# figure out how to display what is upcoming or not %>
      <div class="appointment-top">
        <% if appointment.time > DateTime.now %>
          <p class="appointment-visit-for">Upcoming visit for <%= appointment.pet.name %> </p>
        <% elsif appointment.time.month == DateTime.now.month && appointment.time.day == DateTime.now.day%>
          <p class="appointment-visit-for">Today's visit for <%= appointment.pet.name %> </p>
        <% else %>
          <p class="appointment-visit-for">Past visit for <%= appointment.pet.name %> </p>
        <% end %>
        <small class="appointment-date"> <%= appointment.time.to_formatted_s(:long_ordinal) %> </small>
      </div>
      <div class="appointment-content">
        <h2 class="appointment-name">
          <b> <%= appointment.name.capitalize %></b>
        </h2>
        <p class="appointment-location">
          <%= appointment.location %> <i class="fa-solid fa-location-dot"></i>
        </p>
        <p class="appointment-description">
        <%= appointment.description %>
        </p>
      </div>
      <div class="appointment-img">
        <% if appointment.photos.present? %>
          <% appointment.photos.each do |photo|  %>
            <%= cl_image_tag(photo.key, class: "appointment-photo") %>
          <% end %>
        <% else %>
        <%# remove this else block once photos are added to appo seeds %>
          <img class= "appointment-photo" src="https://s3.amazonaws.com/jo.www.bucket/neighborhoodcats/nodes/images/700/default/Vet_eartip_intro.jpg?1462051746" alt="">
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

<%= javascript_pack_tag 'seemore'%>
