<div class="nav-buttons">
  <%= link_to pet_appointments_path(@pet) do %>
    <%= render 'shared/buttons/backbtn' %>
  <% end %>
</div>
<div class="container appointment-show">
  <div class="appointment-top">
    <% if @appointment.time > DateTime.now %>
      <p class="appointment-visit-for">Upcoming visit for <%= @appointment.pet.name %> </p>
    <% elsif @appointment.time.month == DateTime.now.month && @appointment.time.day == DateTime.now.day%>
      <p class="appointment-visit-for">Today's visit for <%= @appointment.pet.name.capitalize %> </p>
    <% else %>
      <p class="appointment-visit-for">Past visit for <%= @appointment.pet.name.capitalize %> </p>
    <% end %>
    <small class="appointment-date"> <%= @appointment.time.to_formatted_s(:long_ordinal) %> </small>
  </div>
  <div class="appointment-content">
    <h1 class="appointment-name"><%= @appointment.name.capitalize %></h1>
    <div class="appointment-location-container">
      <i class="fa-solid fa-location-dot appointment-location-icon"></i>
      <p class="appointment-location"><%= @appointment.location.capitalize %></p>
    </div>
    <p class="appointment-type">Appointment type: <%= @appointment.appointment_type.capitalize %></p>
    <p class="appointment-description"><%= @appointment.description.capitalize %></p>
    <% if @appointment.important %>
      <p><u>Notifications are enabled for this appointment.<u></p>
        <% end %>
        <div class="appointment-img">
          <% if @appointment.photos.present? %>
            <% @appointment.photos.each do |photo|  %>
              <%= link_to photo do %>
                <%= cl_image_tag(photo.key, class: "apt-img") %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
